<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Avoid_Car_Change</fullName>
    <active>true</active>
    <description>Restricts any updates to the Car field once the Warranty is issued.</description>
    <errorConditionFormula>NOT(ISNEW()) &amp;&amp; ISCHANGED(Car__c)</errorConditionFormula>
    <errorDisplayField>Car__c</errorDisplayField>
    <errorMessage>Car field cannot be changed.</errorMessage>
</ValidationRule>
